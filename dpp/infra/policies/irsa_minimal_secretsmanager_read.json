{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowDppSecretsRead",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret"
      ],
      "Resource": [
        "arn:aws:secretsmanager:ap-northeast-2:<ACCOUNT_ID>:secret:decisionproof/prod/dpp-secrets-*"
      ]
    },
    {
      "Sid": "AllowCMKDecryptIfUsed",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt"
      ],
      "Resource": [
        "arn:aws:kms:ap-northeast-2:<ACCOUNT_ID>:key/<CMK_KEY_ID>"
      ],
      "Condition": {
        "StringEquals": {
          "kms:ViaService": "secretsmanager.ap-northeast-2.amazonaws.com"
        }
      }
    }
  ]
}
